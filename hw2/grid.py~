def box22():
    print (('+ ' + '- '*4)*2 + '+\n' + (('|' + ' '*9)*2 + '|\n')*4)*2 + ('+ ' + '- '*4)*2 + '+'

def boxnn(n):
    print (('+ ' + '- '*4)*n + '+\n' + (('|' + ' '*9)*n + '|\n')*4)*n + ('+ ' + '- '*4)*n + '+'
def boxnm(n,m):
    print (('+ ' + '- '*4)*n + '+\n' + (('|' + ' '*9)*n + '|\n')*4)*m + ('+ ' + '- '*4)*n + '+'

box22()
boxnn(4)
boxnn(6)
boxnm(5,3)
